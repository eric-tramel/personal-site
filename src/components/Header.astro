---
import SocialLinks from './SocialLinks.astro';
---

<header class="home-header">
  <a href="/about">
    <img
      src="/assets/images/profile.jpg"
      alt="Eric W. Tramel"
      class="home-photo"
    />
  </a>
  <h1 class="home-name">Eric W. Tramel, Ph.D.</h1>
  <p class="home-tagline">
    ML Research &amp; Engineering &bull; Synthetic Data &bull; LLMs
  </p>
  <SocialLinks
    show={['twitter', 'linkedin', 'github', 'scholar', 'email', 'cv']}
    class="home-social"
  />
</header>

<style>
  .home-header {
    text-align: center;
    padding: 3rem 0 2rem;
  }

  .home-photo {
    width: 128px;
    height: 128px;
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    object-fit: cover;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
  }

  .home-name {
    font-family: "Raleway", sans-serif;
    font-size: 2.8rem;
    font-weight: 300;
    color: #2e3440;
    text-transform: none;
    letter-spacing: normal;
    text-shadow: none;
    transform: none;
    margin-bottom: 0.5rem;
  }

  .home-tagline {
    font-size: 1.4rem;
    color: #4c566a;
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  :global(.home-social) {
    justify-content: center;
  }

  :global(.home-social a) {
    color: #4c566a;
    text-decoration: none;
  }

  :global(.home-social a:hover) {
    color: #1a365d;
  }
</style>
